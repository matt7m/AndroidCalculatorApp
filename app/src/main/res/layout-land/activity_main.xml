<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/lightGreen">
    <Button
            android:text="@string/Simple"
            android:layout_width="210dp"
            android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button1" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.501"
            android:background="@drawable/rounded_button" android:textColor="#FFFFFF"/>
    <Button
            android:text="@string/Advanced"
            android:layout_width="210dp"
            android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button2" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            android:background="@drawable/rounded_button" android:textColor="#FFFFFF"/>
    <Button
            android:text="@string/About"
            android:layout_width="210dp"
            android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button3" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:background="@drawable/rounded_button" android:textColor="#FFFFFF"/>
    <Button
            android:text="@string/exit"
            android:layout_width="210dp"
            android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button4" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:background="@drawable/rounded_button" android:textColor="#FFFFFF"/>
    <TextView
            android:text="@string/calculator"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>