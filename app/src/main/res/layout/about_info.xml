<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/white" android:paddingRight="25dp"
                                                   android:paddingLeft="25dp">
    <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/author_text"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/app_name"
            android:layout_marginStart="10dp" tools:ignore="MissingConstraints"/>
    <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/author_text" android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>